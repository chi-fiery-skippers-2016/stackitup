<h2> <%= @question.title %> </h2>
<!-- css line -->
<h4> asked: <%= @question.created_at %>_________viewed: <%= @question.view_count %>_________active: <%= @question.updated_at %> </h4>

<div class="body_container">
  <!-- css line -->
  <div class="vote_arrows">
    <form method="post" action="/questions/<%= @question.id %>/votes">
      <input class="up_vote" type="image" src='/imgs/rubber-duck-up.png' alt="Submit" height='25px' width='25px'>
      <input type="hidden" name="direction" value="up">
    </form>
    <h3><%= @question.score %></h3>
    <form method="post" action="/questions/<%= @question.id %>/votes">
      <input class="down_vote" type="image" src='/imgs/rubber-duck-down.png' alt="Submit" height='25px' width='25px'>
      <input type="hidden" name="direction" value="down">
    </form>
  </div>

  <p class="body"><%= @question.body %></p>

  <% for tag in @question.tags %>
    <div class="tag"> <%= tag.name %> </div>
  <% end %>

  <div class="links"> <a href="#">share</a> <a href="#">improve this question</a> </div>

  <div class="user">
    <p>asked: <%= @question.created_at %></p>
    <a href"/users/<%= @question.author_id %>"> <%= @question.author %> </a>
    <!-- reputation -->
  </div>
  <!-- css line  -->
  <% for response in @question.responses %>
    <div class="question_response">
      <p><%= response.body %> --</p>
      </a href="/users/<%= response.user_id %>"><%= response.user.username %></a>
      <p><%= response.created_at %></p>
    </div>
  <% end %>

  <a href="#">add a quack</a>
  <!-- add comment link goes here (need reputation to comment?)  -->
</div>

<div class="answer_container">
  <div class="answer_sort">
    <h4><%= @question.answers.count %></h4>
    <ul class="tabs">
        <li><a href="/questions/<%= @question.id %>?sort=active">Active</a></li>
        <li><a href="/questions/<%= @question.id %>/oldest">Oldest</a></li>
        <li class="active"><a href="/questions/<%= @question.id %>/votes">Votes</a></li>
    </ul>
  </div>


  <% for answer in @answers %>

    <div class="vote_arrows">
      <form><input class="up_vote" type="image" src='/imgs/rubber-duck-up.png' alt="Submit" height='25px' width='25px'></form>
      <h3><%= answer.score %></h3>
      <form><input class="down_vote" type="image" src='/imgs/rubber-duck-down.png' alt="Submit" height='25px' width='25px'></form>
    </div>

    <p class="body"><%= answer.body %></p>

    <div class="links"> <a href="#">share</a> <a href="#">improve this question</a> </div>

    <div class="user">
      <p>answered: <%= answer.created_at %></p>
      <a href"/users/<%= @question.author_id %>"> <%= answer.theOneWhoAnswers.username %> </a>
      <!-- reputation -->
    </div>

    <a href="#">add a quack</a>
    <% for response in answer.responses %>
      <div>
        <p><%= response.body %> - </p>
        <a href="#"><%= response.user.username %></a>
        <p><%= response.created_at %></p>
      </div>
    <% end %>

    <a href="#">add a comment</a>

  <% end %>

  <h4>Your Answer</h4>
  <form action="/answers/new" id="answer_form">
    <!-- <input type="textarea" rows="4" cols="50" name="answer_form"> -->
    <textarea type="textarea" rows="4" cols="50" name="answer_form" placeholder='write your answer here'></textarea>
    <input type="submit">
  </form>

</div>
